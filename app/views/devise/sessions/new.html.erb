<h2>Login</h2>

<%= content_tag(:div, flash[:alert], :id => "flash_alert") if flash[:alert] %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, placeholder: "voce@mail.com", required: true %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off", placeholder: "****", required: true %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit t(:login_button_title), class: "btn btn-success" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
